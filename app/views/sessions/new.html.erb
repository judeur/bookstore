<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path, :html => { :class => "form-horizontal center" }) do |f| %>

      <div class="form-group">
        <div class="field">
          <%= f.label :email, class: "col-md-4  control-label" %><br>
          <div class="col-md-8">
            <%= f.email_field :email, class: "form-control" %>
          </div> <!-- col -->
        </div> <!-- field -->
      </div> <!-- form-group -->

      <div class="form-group">
        <div class="field">
          <%= f.label :password, class: "col-md-4  control-label" %><br>
          <div class="col-md-8">
            <%= f.password_field :password, class: "form-control" %>
          </div> <!-- col -->
        </div> <!-- field -->
      </div> <!-- form-group -->

      <div class="form-group">
        <div class="field col-md-offset-4 col-md-8">
          <%= f.label :remember_me, class: "checkbox inline" do %><br>
            <%= f.check_box :remember_me %>
            <span>Remember me on this computer</span>
            <% end %>

        </div> <!-- field -->
      </div> <!-- form-group -->

      <div class="form-group">
        <div class="field actions col-md-offset-4 col-md-8">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div> <!-- field -->
      </div> <!-- form-group -->
      <% end %>

    <div class="form-group">
      <div class="col-md-offset-4 col-md-8">
        <p class="sign-up"> New user? <%= link_to "Sign up now!", signup_path %></p>
      </div> <!-- field -->
    </div> <!-- form-group -->
  </div> <!-- col-md-6 -->
</div> <!-- row -->
