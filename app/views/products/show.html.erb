
<div class="row">
  <div class="col-md-offset-2 col-md-3 cols-xs-6 col-sm-6">
    <%= image_tag @product.image_url, class: "img-responsive" %>
  </div> <!-- col -->

  <div class="col-md-6 col-md-offset-1 col-xs-6 col-sm-6">
    <h1> <%= @product.name %> </h1>
    <hr>
  </div><!-- col -->

  <div class="col-md-6 col-md-offset-1 col-xs-6 col-sm-6">
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-md-3">
        <strong>Author</strong>
        <p><%= @product.author %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Description</strong>
        <p><%= @product.description %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Price</strong>
        <p><%= number_to_currency(@product.price, unit: "â‚¬ ") %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Average rating:  </strong>
        <p class="rated" data-score="<%= @product.average_rating %>"></p>
      </div><!-- col-xs-6 col-sm-4" -->
    </div><!--nested row -->
  </div><!-- col-md-6 -->
  </div>

<%= render :partial => 'new_comment' %>
<%= render :partial => 'comments' %>
<div style="clear: both;">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
