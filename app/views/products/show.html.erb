<div class="row">
  <div class="col-md-offset-2 col-md-3 cols-xs-6 col-sm-6">
    <%= image_tag @product.image_url, id: "zoom_07", width: "350", class: "img-responsive img-zoom", data_zoom_image: @product.image_url %>
  </div> <!-- col -->

  <div class="col-md-6 col-md-offset-1 col-xs-6 col-sm-6">
    <h1> <%= @product.name %> </h1>
    <hr>
  </div><!-- col -->

  <div class="col-md-6 col-md-offset-1 col-xs-6 col-sm-6">
    <p> This article has been visited <%= @counter %> times. </p>
  </div> <!-- col -->
  <div class="col-md-6 col-md-offset-1 col-xs-6 col-sm-6">
    <div class="row">
      <div class="col-xs-6 col-sm-3 col-md-3">
        <strong>Author</strong>
        <p><%= @product.author %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Description</strong>
        <p><%= @product.description %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Price</strong>
        <p><%= number_to_currency(@product.price, unit: "â‚¬ ") %></p>
      </div><!-- col-xs-6 col-sm-4" -->

      <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0">
        <strong>Average rating:  </strong>
        <p class="rated" data-score="<%= @product.average_rating %>"></p>
      </div><!-- col-xs-6 col-sm-4" -->
    </div>
    <div class="row">
     <!-- <div class="col-xs-6 col-sm-3 col-md-3 col-md-offset-1 col-lg-3 col-sm-offset-1 col-lg-offset-0"> < -->
        <%= form_tag("/payments/create") do %>
            <%= render partial: "shared/stripe_checkout_button" %>
            <%= hidden_field_tag(:product_id, @product.id) %>
        <% end %>
      </div> <!-- col -->
    </div><!--nested row -->
  </div><!-- col-md-6 -->

<%= render :partial => 'new_comment' %>
<%= render :partial => 'comments' %>

<div style="clear: both;">
  <%= link_to 'Edit', edit_product_path(@product) %> |
  <%= link_to 'Back', products_path %>
</div>
