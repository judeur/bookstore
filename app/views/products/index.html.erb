<div class="container-fluid index">
<p id="notice"><%== notice %></p>
<h2> Our books </h2>
<%= link_to 'Add a new book', new_product_path %>

	
	
	<div id="products" class="row list-group">
		<% @products.each do |product| %>
		<div class="item col-xs-12 col-sm-6 col-lg-4">
			<div class="thumbnail">
				
				<p class="img group list-group-image"><%= product.image_url %></p>
				
				<div class="caption">
					<h3 class="group inner list-group-item-heading strong"> Name </h3>
					
					<p><%= product.name %> </p>
					
					
					<p class="group inner list-group-item-text"> 
						
						<%= product.description %></p>
						
						<div class="row">
							<div class="col-xs-12 col-md-6">
								<p class="lead"> 
									
									<%= product.price %> </p>
									
							</div> <!-- col -->
							<div class="col-xs-12 col-md-6">
								
								<%= link_to 'Show', product, class: "btn btn-default" %>
								<%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %>
								<%= link_to 'Destroy', product, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
								
							</div> <!-- col -->
						</div> <!-- row -->
						
				</div> <!-- caption -->
			</div> <!-- thumbnail -->	
		</div> <!-- item -->
		<% end %>
		

	</div> <!-- #products .row -->
	
</div> <!-- container -->
	
<br>
	
	
	