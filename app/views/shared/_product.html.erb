<div class="item col-xs-12 col-sm-6 col-lg-4">
			<div class="thumbnail">
				
				<p class="img group list-group-image"><%= image_tag product.image_url, width: "110" %></p>
				
				<div class="caption">
					<h3 class="group inner list-group-item-heading strong"> <%= product.name %></h3>
					<h5><%= product.author %></h5>
					
					
					
					<p class="group inner list-group-item-text"> 
						
						<%= product.description %></p>
						
						<div class="row">
							<div class="col-xs-12 col-md-6">
								<p class="lead"> 
									
									<%= number_to_currency(product.price, unit: "â‚¬ ") %> </p>
									
							</div> <!-- col -->
							<div class="col-xs-12 col-md-6">
								
								<%= link_to 'Show', product, class: "btn btn-default" %>
								<%= link_to 'Edit', edit_product_path(product), class: "btn btn-default" %>
								<%= link_to 'Destroy', product, class: "btn btn-warning", method: :delete, data: { confirm: 'Are you sure?' } %>
								
							</div> <!-- col -->
						</div> <!-- row -->
						<% logger.debug "Book name: #{product.name}" %>
				</div> <!-- caption -->
			</div> <!-- thumbnail -->	
		</div> <!-- item -->
