<div class="row" id="deviseForm">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
             html: { class: "form" }) do |f| %>
  <%= devise_error_messages! %>

  <div class="header col-xs-12">
    <h2 class="title">Sign up</h2>
  </div> <!-- header -->

  <div class="content controls col-xs-12">

    <div class="field form-group col-xs-12 p0 pt12 m0">
      <%= f.label :first_name %><br />
      <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
    </div> <!-- field -->

    <div class="field form-group col-xs-12 p0 m0">
      <%= f.label :last_name %><br />
      <%= f.text_field :last_name, autofocus: true, class: "form-control" %>
    </div> <!-- field -->

    <div class="field form-group col-xs-12 p0 m0">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div> <!-- field -->

    <div class="field form-group col-xs-12 p0 m0">
      <%= f.label :password %>
      <placeholder>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %> characters minimum)
      <% end %>
      </placeholder>
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>

    </div><!-- field -->

    <div class="field form-group col-xs-12 p0 m0">
      <%= f.label :password_confirmation, "Confirm password" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div> <!-- field -->
  </div> <!-- content -->

  <div class="subfooter col-xs-12 pt12">
    <div class="group">
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-info col-xs-5 fr" %>
      </div><!-- actions -->
    </div><!-- group -->
  </div><!-- subfooter -->
<% end %>

<%= link_to "Log in", new_session_path(resource_name), class: "btn btn-default", role: "button" %>

</div><!-- row -->